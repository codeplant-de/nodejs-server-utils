{
  "name": "@codeplant-de/nodejs-server-logger",
  "version": "1.1.0",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "license": "MIT",
  "repository": {
    "url": "https://github.com/codeplant-de/nodejs-server-utils",
    "directory": "packages/logger",
    "type": "git"
  },
  "exports": {
    ".": {
      "types": "./lib/index.d.ts",
      "default": "./lib/index.js"
    },
    "./test": {
      "types": "./lib/test-utils.d.ts",
      "default": "./lib/test-utils.js"
    }
  },
  "scripts": {
    "lint": "yarn cp-lint",
    "format": "yarn cp-format",
    "test": "yarn jest",
    "build": "rimraf lib && yarn build:cjs && yarn build:types",
    "build:cjs": "yarn cp-transpile -o lib cjs",
    "build:types": "yarn cp-transpile -o lib types"
  },
  "dependencies": {
    "chalk": "^4.0.0",
    "logform": "^2.5.1",
    "triple-beam": "^1.3.0",
    "winston": "^3.8.2",
    "winston-transport": "^4.5.0"
  },
  "devDependencies": {
    "@types/triple-beam": "^1.3.2",
    "jest": "^27.0.0"
  },
  "publishConfig": {
    "access": "public"
  }
}
